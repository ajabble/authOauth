{% extends 'ApiBundle:admin:layout.html.twig' %}

{% block body_id 'admin_user_index' %}

{% block main %}
    <h1>{{ 'title.user_list'|trans }}</h1>

    <table class="table table-striped">
        <thead>
            <tr>
                <div class="item-actions">
                    <a href="{{ path('admin_user_new') }}" class="btn btn-sm btn-default">
                        {{ 'action.create_user'|trans }}
                    </a>
                </div>
            </tr>
            <tr>
                <th>{{ 'label.user_firstname'|trans }}</th>
                <th>{{ 'label.user_lastname'|trans }}</th>
                <th>{{ 'label.user_roles'|trans }}</th>
                <th>{{ 'label.user_username'|trans }}</th>
                <th>{{ 'label.user_email'|trans }}</th>
                <th>{{ 'label.user_dob'|trans }}</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.firstname }}</td>
                <td>{{ user.lastname }}</td>
                <td>{{ user.roles|join(',') }}</td>
                <td>{{ user.username }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.dob|date('m/d/Y') }}</td>
                <td>
                    <div class="item-actions">
                        <a href="{{ path('admin_user_show', { id: user.id }) }}" class="btn btn-sm btn-default">
                            {{ 'action.show'|trans }}
                        </a>
                    </div>
                </td>
            </tr>
        {% else %}
            <tr>
                <td>{{ 'user.no_users_found'|trans }}</td>
           </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
