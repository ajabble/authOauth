{% if show_confirmation|default(false) %}
    {% set attr = {'data-confirmation': 'true'} %}
    {{ include('ApiBundle:admin/user:_delete_user_confirmation.html.twig') }}
{% endif %}

{{ form_start(form, { attr: attr|default({}) }) }}
    {{ form_widget(form) }}

    <input type="submit" value="{{ button_label|default('label.create_user'|trans) }}"
           class="{{ button_css|default("btn btn-primary") }}"
     />
{{ form_end(form) }}

{% if include_back_to_home_link|default(false) %}
    <a href="{{ path('admin_user_index') }}" class="btn btn-link">
        {{ 'action.back_to_userlist'|trans }}
    </a>
{% endif %}
