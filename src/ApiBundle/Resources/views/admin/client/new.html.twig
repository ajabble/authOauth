{% extends 'ApiBundle:admin:layout.html.twig' %}

{% block body_id 'admin_client_new' %}

{% block main %}
    <h1>{{ 'title.client_new'|trans }}</h1>

    {{ form_start(form) }}
      {{ form_row(form.name) }}
      {{ form_row(form.redirect_url) }}
      {{ form_row(form.password) }}
      {{ form_row(form.send) }}
    {{ form_end(form) }}

    <a href="{{ path('admin_client_index') }}" class="btn btn-link">
        {{ 'action.back_to_list'|trans }}
    </a>
{% endblock %}

{% block sidebar %}
    {{ parent() }}
{% endblock %}
